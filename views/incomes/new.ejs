<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-plus-circle"></i> Add New Income</h2>
    </div>

    <form action="/incomes" method="POST" class="income-form">
        <div class="form-group">
            <label for="description"><i class="fas fa-edit"></i> Description:</label>
            <input type="text" id="description" name="description" placeholder="Enter income description" required autocomplete="off">
        </div>

        <div class="form-group">
            <label for="amount"><i class="fas fa-money-bill-wave"></i> Amount (VND):</label>
            <input type="number" id="amount" name="amount" step="1000" min="0" placeholder="Enter amount" required>
            <span id="formatted-amount"></span>
        </div>

        <div class="form-group">
            <label for="category"><i class="fas fa-tag"></i> Category:</label>
            <select id="category" name="category">
                <option value="Salary">ğŸ’° Salary</option>
                <option value="Bonus">ğŸ Bonus</option>
                <option value="Investment">ğŸ“ˆ Investment</option>
                <option value="Gift">ğŸ€ Gift</option>
                <option value="Other">ğŸ“Œ Other</option>
            </select>
        </div>

        <div class="form-group">
            <label for="date"><i class="far fa-calendar-alt"></i> NgÃ y:</label>
            <input type="date" id="date" name="date" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
            <a href="/incomes" class="btn"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>

<script>
    // Set today's date in client's local timezone
    const today = new Date();
    const localDateString = today.toISOString().split('T')[0];
    
    // Set date value immediately
    if (document.getElementById('date')) {
        document.getElementById('date').value = localDateString;
    }
    
    // Also set when DOM is fully loaded
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('date').value = localDateString;
    });

    // Input focus effect
    document.querySelectorAll('input, select').forEach(input => {
        input.addEventListener('focus', () => {
            input.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', () => {
            input.parentElement.classList.remove('focused');
        });
    });

    // Format amount when typing
    const amountInput = document.getElementById('amount');
    amountInput.addEventListener('input', function() {
        const value = this.value.replace(/,/g, '');
        if (value) {
            const formattedValue = new Intl.NumberFormat('vi-VN').format(value);
            document.getElementById('formatted-amount').textContent = formattedValue + ' VND';
        } else {
            document.getElementById('formatted-amount').textContent = '';
        }
    });
</script>

<style>
    .form-group.focused label {
        color: var(--primary-color);
    }
    
    #formatted-amount {
        display: block;
        margin-top: 5px;
        font-weight: 500;
        color: var(--primary-color);
    }
</style>
