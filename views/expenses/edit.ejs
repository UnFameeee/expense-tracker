<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-edit"></i> Chỉnh sửa chi tiêu</h2>
    </div>

    <form action="/expenses/<%= expense.id %>?_method=PUT" method="POST" class="expense-form">
        <div class="form-group">
            <label for="description"><i class="fas fa-edit"></i> Mô tả:</label>
            <input type="text" id="description" name="description" value="<%= expense.description %>" placeholder="Nhập mô tả chi tiêu" required autocomplete="off">
        </div>

        <div class="form-group">
            <label for="amount"><i class="fas fa-money-bill-wave"></i> Số tiền (VND):</label>
            <input type="number" id="amount" name="amount" step="1000" min="0" value="<%= expense.amount %>" placeholder="Nhập số tiền" required>
            <span id="formatted-amount"><%= new Intl.NumberFormat('vi-VN').format(expense.amount) %> VND</span>
        </div>

        <div class="form-group">
            <label for="category"><i class="fas fa-tag"></i> Danh mục:</label>
            <select id="category" name="category">
                <option value="Ăn uống" <%= expense.category === 'Ăn uống' ? 'selected' : '' %>>🍕 Ăn uống</option>
                <option value="Di chuyển" <%= expense.category === 'Di chuyển' ? 'selected' : '' %>>🚗 Di chuyển</option>
                <option value="Mua sắm" <%= expense.category === 'Mua sắm' ? 'selected' : '' %>>🛒 Mua sắm</option>
                <option value="Hóa đơn" <%= expense.category === 'Hóa đơn' ? 'selected' : '' %>>📄 Hóa đơn</option>
                <option value="Giải trí" <%= expense.category === 'Giải trí' ? 'selected' : '' %>>🎮 Giải trí</option>
                <option value="Khác" <%= expense.category === 'Khác' ? 'selected' : '' %>>📌 Khác</option>
            </select>
        </div>

        <div class="form-group">
            <label for="date"><i class="far fa-calendar-alt"></i> Ngày:</label>
            <input type="date" id="date" name="date" value="<%= expense.date.toISOString().split('T')[0] %>" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Cập nhật</button>
            <a href="/" class="btn"><i class="fas fa-times"></i> Hủy</a>
        </div>
    </form>
</div>

<script>
    // Hiệu ứng focus cho input
    document.querySelectorAll('input, select').forEach(input => {
        input.addEventListener('focus', () => {
            input.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', () => {
            input.parentElement.classList.remove('focused');
        });
    });

    // Format số tiền khi nhập
    const amountInput = document.getElementById('amount');
    amountInput.addEventListener('input', function() {
        const value = this.value.replace(/,/g, '');
        if (value) {
            const formattedValue = new Intl.NumberFormat('vi-VN').format(value);
            document.getElementById('formatted-amount').textContent = formattedValue + ' VND';
        } else {
            document.getElementById('formatted-amount').textContent = '';
        }
    });
</script>

<style>
    .form-group.focused label {
        color: var(--primary-color);
    }
    
    #formatted-amount {
        display: block;
        margin-top: 5px;
        font-weight: 500;
        color: var(--primary-color);
    }
</style>
