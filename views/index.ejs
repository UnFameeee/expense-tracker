<div class="dashboard-summary">
    <div class="summary-card total-expenses">
        <div class="icon">
            <i class="fas fa-chart-line"></i>
        </div>
        <div class="info">
            <h3><%= new Intl.NumberFormat('vi-VN').format(total) %> VND</h3>
            <p>Total Expenses</p>
        </div>
    </div>
    <% if (expenses.length > 0) { %>
        <div class="summary-card">
            <div class="icon" style="background-color: #4361ee;">
                <i class="fas fa-receipt"></i>
            </div>
            <div class="info">
                <h3><%= new Intl.NumberFormat('vi-VN').format(expenses.length) %></h3>
                <p>Number of Expenses</p>
            </div>
        </div>
        <div class="summary-card">
            <div class="icon" style="background-color: #38b000;">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="info">
                <h3><%= new Date().toLocaleDateString('vi-VN', { month: 'long', year: 'numeric' }) %></h3>
                <p>Current Month</p>
            </div>
        </div>
    <% } %>
</div>

<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-list"></i> Expense List</h2>
        <div>
            <a href="/expenses/new" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Add New</a>
        </div>
    </div>

    <% if (expenses.length > 0) { %>
        <table class="expense-table">
            <thead>
                <tr>
                    <th><i class="far fa-calendar-alt"></i> Date</th>
                    <th><i class="fas fa-align-left"></i> Description</th>
                    <th><i class="fas fa-tag"></i> Category</th>
                    <th><i class="fas fa-money-bill-wave"></i> Amount</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= new Date(expense.date).toLocaleDateString('vi-VN') %></td>
                        <td><%= expense.description %></td>
                        <td>
                            <span class="category-badge">
                                <% if (expense.category === 'Food' || expense.category === 'ƒÇn u·ªëng') { %>
                                    üçï
                                <% } else if (expense.category === 'Transportation' || expense.category === 'Di chuy·ªÉn') { %>
                                    üöó
                                <% } else if (expense.category === 'Shopping' || expense.category === 'Mua s·∫Øm') { %>
                                    üõí
                                <% } else if (expense.category === 'Bills' || expense.category === 'H√≥a ƒë∆°n') { %>
                                    üìÑ
                                <% } else if (expense.category === 'Entertainment' || expense.category === 'Gi·∫£i tr√≠') { %>
                                    üéÆ
                                <% } else { %>
                                    üìå
                                <% } %>
                                <% if (expense.category === 'ƒÇn u·ªëng') { %>
                                    Food
                                <% } else if (expense.category === 'Di chuy·ªÉn') { %>
                                    Transportation
                                <% } else if (expense.category === 'Mua s·∫Øm') { %>
                                    Shopping
                                <% } else if (expense.category === 'H√≥a ƒë∆°n') { %>
                                    Bills
                                <% } else if (expense.category === 'Gi·∫£i tr√≠') { %>
                                    Entertainment
                                <% } else if (expense.category === 'Kh√°c') { %>
                                    Other
                                <% } else { %>
                                    <%= expense.category %>
                                <% } %>
                            </span>
                        </td>
                        <td class="amount"><%= new Intl.NumberFormat('vi-VN').format(expense.amount) %> VND</td>
                        <td class="actions">
                            <a href="/expenses/<%= expense.id %>/edit" class="btn btn-edit"><i class="fas fa-edit"></i> Edit</a>
                            <form action="/expenses/<%= expense.id %>?_method=DELETE" method="POST" class="delete-form">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this expense?')"><i class="fas fa-trash-alt"></i> Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <div class="empty-message">
            <i class="fas fa-receipt"></i>
            <p>No expenses found.</p> 
            <a href="/expenses/new" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Add New Expense</a>
        </div>
    <% } %>
</div>
