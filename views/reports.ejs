<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <h3>Báo cáo tài chính</h3>
      <p class="text-muted">Xem báo cáo chi tiết về thu nhập và chi tiêu</p>
    </div>
  </div>

  <!-- Bước lọc báo cáo -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <form id="report-filter">
            <div class="row">
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="report-type" class="form-label">Loại báo cáo</label>
                <select class="form-select" id="report-type">
                  <option value="income-expense">Thu - Chi</option>
                  <option value="category">Theo danh mục</option>
                  <option value="trend">Xu hướng</option>
                  <option value="budget">Ngân sách</option>
                </select>
              </div>
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="report-period" class="form-label">Thời gian</label>
                <select class="form-select" id="report-period">
                  <option value="7days">7 ngày qua</option>
                  <option value="30days">30 ngày qua</option>
                  <option value="month" selected>Tháng này</option>
                  <option value="last-month">Tháng trước</option>
                  <option value="quarter">Quý này</option>
                  <option value="year">Năm nay</option>
                  <option value="custom">Tuỳ chỉnh</option>
                </select>
              </div>
              <div class="col-md-4 d-flex align-items-end">
                <button type="button" class="btn btn-primary w-100" id="generate-report">
                  <i class="bi bi-file-earmark-bar-graph me-2"></i>Tạo báo cáo
                </button>
              </div>
            </div>
            <div class="row mt-3 date-range-container" style="display: none;">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="start-date" class="form-label">Từ ngày</label>
                <input type="date" class="form-control" id="start-date">
              </div>
              <div class="col-md-6">
                <label for="end-date" class="form-label">Đến ngày</label>
                <input type="date" class="form-control" id="end-date">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Kết quả báo cáo -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Kết quả báo cáo</h5>
        </div>
        <div class="card-body">
          <div id="report-content" class="text-center p-5">
            <i class="bi bi-bar-chart-line fs-1 text-muted mb-3"></i>
            <h5>Chọn loại báo cáo và thời gian</h5>
            <p class="text-muted">Sau đó nhấn "Tạo báo cáo" để xem kết quả</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Hiện thị date range khi chọn tuỳ chỉnh
    const reportPeriod = document.getElementById('report-period');
    const dateRangeContainer = document.querySelector('.date-range-container');
    
    reportPeriod.addEventListener('change', function() {
      if (this.value === 'custom') {
        dateRangeContainer.style.display = 'flex';
      } else {
        dateRangeContainer.style.display = 'none';
      }
    });

    // Xuất lý tạo báo cáo
    document.getElementById('generate-report').addEventListener('click', function() {
      const reportContent = document.getElementById('report-content');
      reportContent.innerHTML = `
        <div class="text-center">
          <p>Chức năng tạo báo cáo đang được phát triển...</p>
        </div>
      `;
    });
  });
</script>
